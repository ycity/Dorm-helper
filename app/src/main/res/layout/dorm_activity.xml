<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="250dip"
            android:layout_height="60dip"
            android:text="各楼层余量"
            android:textSize="25dip"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="70dip"
            android:layout_height="25dip"
            android:text="5号楼"
            android:textSize="20dip"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/info_b5"
            android:text="N/A"
            android:layout_width="150dip"
            android:layout_height="40dip"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="70dip"
            android:layout_height="25dip"
            android:text="8号楼"
            android:textSize="20dip"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/info_b8"
            android:text="N/A"
            android:layout_width="150dip"
            android:layout_height="40dip"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="70dip"
            android:layout_height="25dip"
            android:text="9号楼"
            android:textSize="20dip"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/info_b9"
            android:text="N/A"
            android:layout_width="150dip"
            android:layout_height="40dip"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="70dip"
            android:layout_height="25dip"
            android:text="13号楼"
            android:textSize="20dip"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/info_b13"
            android:text="N/A"
            android:layout_width="150dip"
            android:layout_height="40dip"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="70dip"
            android:layout_height="25dip"
            android:text="14号楼"
            android:textSize="20dip"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/info_b14"
            android:text="N/A"
            android:layout_width="150dip"
            android:layout_height="40dip"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/dorm_update_btn"
            android:text="刷新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <Button
            android:id="@+id/select_dorm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择宿舍"/>
    </LinearLayout>
</LinearLayout>